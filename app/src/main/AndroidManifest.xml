<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nqm.loginbuilding" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ProjectDetailActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProjectListActivity"
            android:label="@string/title_activity_project_list"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".CreateProjectActivity"
            android:label="@string/title_activity_create_project" >
        </activity>
        <activity
            android:name=".EditProjectActivity"
            android:label="@string/title_activity_edit_project" >
        </activity>
        <activity
            android:name=".AddSessionActivity"
            android:label="@string/title_activity_add_session" >
        </activity>
        <activity
            android:name=".SessionDetailActivity"
            android:label="@string/title_activity_session_detail" >
        </activity>
        <activity
            android:name=".EditSessionActivity"
            android:label="@string/title_activity_edit_session" >
        </activity>
        <activity
            android:name=".ProjectDetailActivityFragment"
            android:label="ProjectDetailActivityFragment" >
        </activity>
        <!--<activity
            android:name=".ProjectDetailBuildingFragment"
            android:label="@string/title_activity_project_detail_building_fragment" >
        </activity>
        <activity
            android:name=".ProjectDetailTestDeviceFragment"
            android:label="@string/title_activity_project_detail_test_device_fragment" >
        </activity>
        <activity
            android:name=".ProjectDetailTestSessionFragment"
            android:label="@string/title_activity_project_detail_test_session_fragment" >
        </activity>-->
    </application>

</manifest>
